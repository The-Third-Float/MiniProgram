/* pages/address/add.wxss */
.m_total-style,.m_address-total {
  /* background-color: bisque; */
  display:flex;
  width:100%;
  flex-direction:column;
  font-size: small;
}

.m_address-info {
  /* background-color: yellowgreen; */
  width:92%;
  margin:auto;
}

.m_info {
  /* background-color: chartreuse; */
  height:44px;
  display:flex;
  border-bottom:1px solid #eeeeee;
}

.m_info-left {
  /* background-color: royalblue; */
  width:25%;
  display:flex;
  align-items:center;
}

.m_info-right {
  /* background-color: greenyellow; */
  width:75%;
  display:flex;
  align-items:center;
}

.m_checkbox {
  width: 100%;
  display:flex;
  align-items:center;
  justify-content: space-around;
}

.m_target {
  /* background-color: turquoise; */
  display:flex;
  width:92%;
  margin:25px auto;
}

.m_save-address {
  /* background-color: hotpink; */
  bottom:0;
  position:fixed;
  width:100%;
  height:44px;
  display:flex;
  align-items:center;
  justify-content:center;
}

.weui-input {
  width: 100%;
}

.placeholder {
  color: #aab2bd;
}

.group {
  display: flex;
  width:100%;
}

.label-1 {
  margin: 20rpx;
  width:100rpx;
  text-align:center;
}

.label-1__icon {
  /* background: #fcfff4; */
  border: 1px solid #eeeeee;
}

.label-1__icon-checked {
  position: absolute;
  width:100rpx;
  background: #1aad19;
  color: white;
}

.bottom-type{
  width: 100%;
  position: fixed;
  bottom: 0;
}

.m_image {
  height: 100%;
  width: 100%;
}

.m_type {
  display: inline;
}

.m_item {
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin: 0 10%;
}